{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "allowJs": true, // TODO: Should port to TypeScript.
    "esModuleInterop": true,
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "types": []
  },
  "exclude": ["**/*.spec.ts", "**/*.spec.tsx", "**/*.test.ts", "**/*.test.tsx", "__tests__/**/*"],
  "extends": "./tsconfig.custom.json"
}
