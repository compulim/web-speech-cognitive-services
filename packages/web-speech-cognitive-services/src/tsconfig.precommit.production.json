{
  "compilerOptions": {
    "allowJs": true, // TODO: Should port to TypeScript.
    "esModuleInterop": true,
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "strict": true,
    "target": "ESNext",
    "types": []
  },
  "exclude": [
    "**/*.spec.js",
    "**/*.spec.jsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.js",
    "**/*.test.jsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "__tests__/**/*"
  ]
  // TODO: Should port to TypeScript.
  // "extends": "@tsconfig/strictest/tsconfig.json"
}
