{
  "testEnvironment": "@happy-dom/jest-environment",
  "testPathIgnorePatterns": [
    "/__setup__/",
    "/lib/",
    "/node_modules/",
    "/__types__/",
    "\\.pnp\\.[^\\/]+$"
  ],
  "transform": {
    "/__tests__/types/": [
      "<rootDir>/__tests__/__setup__/typingTestTransformer.js"
    ],
    "\\.m?[jt]sx?$": [
      "babel-jest",
      {
        "presets": [
          [
            "@babel/preset-typescript",
            {
              "allowDeclareFields": true
            }
          ],
          [
            "@babel/preset-env",
            {
              "modules": "commonjs",
              "targets": {
                "node": "20"
              }
            }
          ]
        ],
        "sourceMaps": true
      }
    ]
  },
  "watchPathIgnorePatterns": [
    "\\.tmp\\."
  ]
}
